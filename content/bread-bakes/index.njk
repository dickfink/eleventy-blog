<h1>Country Loaf Bakes</h1>

<h2>Posts with 'Bread' AND 'Bake' tags:</h2>
{% set foundPosts = false %}
{% for post in collections.all %}
  {% if post.data.tags and post.data.tags.includes('Bread') and post.data.tags.includes('Bake') %}
    {% set foundPosts = true %}
    <article>
      <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      <time>{{ post.data.date | date("%B %d, %Y") }}</time>
      <p>Tags: {{ post.data.tags | join(", ") }}</p>
      {% if post.data.description %}
        <p>{{ post.data.description }}</p>
      {% endif %}
    </article>
  {% endif %}
{% endfor %}

{% if not foundPosts %}
  <p>No posts found with both 'Bread' and 'Bake' tags.</p>
{% endif %}
